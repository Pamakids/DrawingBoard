<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.VScrollBar")]
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="inactive"/>
		<s:State name="disabled"/>
		<s:State name="normal"/>
	</s:states>

	<s:Button id="track" top="0" bottom="0" focusEnabled="false" left="0"
			  width="15" visible="false"/>

	<s:Button id="thumb" focusEnabled="false"
			  skinClass="skins.MyVScrollBarThumbSkin"/>

	<!-- SkinParts
		 name=incrementButton, type=spark.components.Button, required=false
		 name=track, type=spark.components.Button, required=false
		 name=thumb, type=spark.components.Button, required=false
		 name=decrementButton, type=spark.components.Button, required=false
	-->
</s:Skin>
