<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" width="400" height="300"
		 creationComplete="group1_creationCompleteHandler(event)"
		 xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[

			import mx.events.FlexEvent;
			public var text:String;
			public var cb:Function;

			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				bg.graphics.beginFill(0, .5);
				bg.graphics.drawRoundRect(0, 0, 400, 300, 10, 100);
				bg.graphics.endFill();
			}

		]]>
	</fx:Script>
	<mx:UIComponent id="bg"/>
	<s:Group>
	</s:Group>
	<s:TextArea color="0xffffff" fontSize="20" width="100%" editable="false"/>
</s:Group>
