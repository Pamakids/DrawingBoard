	<fx:Script>
		<![CDATA[

			import mx.events.FlexEvent;

			protected function group2_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub

			}

			public function initDetail(arr:Array):void
			{
				for each (var o:Object in arr)
				{
					var item:DetailItem=new DetailItem();
					item.initData(o);
					detailList.addElement(item);
				}
			}

			public function initCommits(arr:Array):void
			{
				for each (var o:Object in arr)
				{
					var item:DetailItem=new DetailItem();
					item.initData(o);
					detailList.addElement(item);
				}
			}

		]]>
	</fx:Script>
	<s:Scroller width="100%">
		<s:Image source="@Embed('assets/discuss/startdraw_btn.png')" left="890"
				 top="20"/>
